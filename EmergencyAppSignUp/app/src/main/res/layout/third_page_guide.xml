
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent" tools:context=".GuidePage3"
    android:background="#ccffff">

    <TextView
        android:id="@+id/titleLabelTv"
        android:layout_width="214dp"
        android:layout_height="206dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="100dp"
        android:background="@drawable/call_center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We are here to help you!"
        android:textSize="30sp"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:textColor="#6666ff"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="     Open the chat and start a conversation\n          with us. We will help you with\n                         your problem!"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="350dp"
        android:textColor="#6666ff" />

    <Button
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginTop="600dp"
        android:layout_marginLeft="260dp"
        android:id="@+id/LoginPageButton"
        android:text="Start"/>
</RelativeLayout>