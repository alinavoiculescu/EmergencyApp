<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Categories"
        android:textSize="30sp"
        android:textAllCaps="true"
        android:padding="10dp"/>

    <Button
        android:id="@+id/profileBtn"
        android:layout_width="130dp"
        android:layout_height="69dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="84dp"
        android:layout_marginTop="10dp"
        android:text="Profile"/>

    <Button
        android:id="@+id/mapBtn"
        android:layout_width="130dp"
        android:layout_height="69dp"
        android:layout_above="@id/profileBtn"
        android:layout_centerInParent="true"
        android:layout_marginStart="84dp"
        android:layout_marginTop="10dp"
        android:text="Map"/>

    <Button
        android:id="@+id/phoneNumbersBtn"
        android:layout_width="130dp"
        android:layout_height="69dp"
        android:layout_below="@id/profileBtn"
        android:layout_centerInParent="true"
        android:layout_marginStart="84dp"
        android:layout_marginTop="10dp"
        android:text="Urgent call" />

    <Button
        android:id="@+id/assistantsListBtn"
        android:layout_width="130dp"
        android:layout_height="69dp"
        android:layout_below="@id/phoneNumbersBtn"
        android:layout_centerInParent="true"
        android:layout_marginStart="84dp"
        android:layout_marginTop="10dp"
        android:text="Assistants" />

</RelativeLayout>